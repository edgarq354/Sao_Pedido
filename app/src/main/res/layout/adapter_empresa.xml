<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    >
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="220sp"
    app:cardCornerRadius="15dp"
    app:cardMaxElevation="2dp"
    app:cardElevation="1dp"
    android:layout_margin="5sp"
    >

    <ImageView
        android:id="@+id/cv_fondo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >

    </ImageView>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_marginTop="130sp"
    android:layout_marginLeft="15sp"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@mipmap/ic_launcher_round"
        android:layout_gravity="left"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="3dp"
        android:id="@+id/im_logo"
        >
    </de.hdodenhof.circleimageview.CircleImageView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        >

        <TextView
            android:id="@+id/tv_razon_social"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_weight="1"
            android:gravity="center"
            android:shadowColor="@android:color/black"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="3"
            android:text="RAZON SOCIAL"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_estado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:background="@drawable/bk_cerrado"
                android:gravity="center"
                android:paddingLeft="8sp"
                android:paddingRight="8sp"
                android:text="Cerrado"
                android:textColor="@color/colorTextoBoton" />

            <TextView
                android:id="@+id/tv_minimo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:shadowColor="@android:color/black"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="3"
                android:text="Bs 20"
                android:layout_marginRight="15sp"
                android:gravity="right"
                android:textColor="@color/colorTextoBoton"
                android:textSize="19sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_abrepronto"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10sp"

                android:textSize="10dp"
                android:paddingLeft="8sp"
                android:paddingRight="8sp"
                android:text="Estado"
                android:shadowColor="@android:color/black"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="3"
                android:textColor="@color/colorTextoBoton" />

            <TextView
                android:id="@+id/mt_minimo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:shadowColor="@android:color/black"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="3"
                android:text="Monto mÃ­nimo"
                android:paddingRight="2sp"
                android:layout_marginRight="15sp"
                android:gravity="right"
                android:textSize="10dp"
                android:textColor="@color/colorTextoBoton"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="right"
        >



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:layout_marginTop="10sp">



            <ImageView
                android:id="@+id/im_cronometro"
                android:layout_width="26dp"
                android:layout_height="match_parent"
                android:padding="2sp"
                app:srcCompat="@drawable/cronometro" />

            <TextView
                android:id="@+id/tv_tiempo_preparacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/colorTextoBoton"
                android:text="10"
                android:shadowColor="@android:color/black"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="3"

                />
            <TextView
                android:id="@+id/tv_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/colorTextoBoton"
                android:text="min"
                android:shadowColor="@android:color/black"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="3"
                android:layout_marginRight="15sp"

                />



        </LinearLayout>

        <TextView
            android:id="@+id/t_estimado"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:shadowColor="@android:color/black"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="3"
            android:paddingRight="3sp"
            android:text="Tiempo estimado"
            android:layout_marginRight="15sp"
            android:gravity="right"
            android:textSize="10dp"
            android:textColor="@color/colorTextoBoton"
            />


    </LinearLayout>




</androidx.cardview.widget.CardView>
</RelativeLayout>

